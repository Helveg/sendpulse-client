{
  "name": "sendpulse-client",
  "version": "2.0.0",
  "description": "A SendPulse REST client library Node.js or browser, compatible with TypeScript, ESM, and CommonJS.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/esm",
    "dist/cjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs:build": "tsc -p tsconfig.cjs.json",
    "build:cjs:rename": "node ./scripts/rename-cjs.js",
    "build:cjs": "npm-run-all -s build:cjs:build build:cjs:rename",
    "serial": "npm-run-all -s build:esm build:cjs",
    "build": "npm run serial",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\""
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helveg/sendpulse-client.git"
  },
  "keywords": [
    "sendpulse",
    "api"
  ],
  "author": "SendPulse",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/helveg/sendpulse-client/issues"
  },
  "homepage": "https://github.com/helveg/sendpulse-client"
}
