{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.mts"],
  "exclude": ["node_modules", "dist"]
}
